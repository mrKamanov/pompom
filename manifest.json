{
  "manifest_version": 3,
  "name": "PomPom",
  "version": "1.15",
  "description": "AI-powered browser extension",
  "permissions": [
    "activeTab",
    "storage",
    "contextMenus",
    "downloads",
    "tabs"
  ],
  "host_permissions": [
    "https://api.aimlapi.com/*",
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "lib/highlight.min.js",
        "lib/languages/sql.min.js",         
        "lib/languages/javascript.min.js",  
        "easyOCR.js",
        "content.js"
      ],
      "css": [
        "lib/styles/github.min.css", 
        "styles.css"
      ]
    }
  ],
  "options_page": "options/options.html",
  "icons": {
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "inject.js", 
        "options/donations.js",
        "easyOCR.js",
        "lib/*.js",         
        "lib/styles/*.css"  
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "commands": {
    "prompt1_shortcut": {
      "description": "Обработать выделенный текст с промптом 1"
    },
    "prompt2_shortcut": {
      "description": "Обработать выделенный текст с промптом 2"
    },
    "prompt3_shortcut": {
      "description": "Обработать выделенный текст с промптом 3"
    },
    "print_shortcut": {
      "description": "Запустить автопечать (имитация печати ответа на странице)"
    }
  }
}